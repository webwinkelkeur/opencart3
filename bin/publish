#!/bin/bash

set -euo pipefail
cd "$(dirname "$0")/.."

git push origin master
git push --tags origin

version="$(git describe --tags --match 'v*' --exact-match)"
if [[ $version != "" ]]; then
    ./bin/package
    hub release create -o -a ./dist/opencart3-webwinkelkeur-$version.zip -m $version $version
fi
